<% content_for :title, "Profile" %>
<h3>Edit Your Profile</h3>
<a href="/events">Events Dashboard</a>
<br>
<% if flash[:errors] %>
	<% flash[:errors].each do |error| %>
		<p><%= error %></p>
	<% end %>
<% end %>
